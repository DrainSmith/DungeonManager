<UserControl x:Class="DungeonManagerWpf.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DungeonManagerWpf"
             mc:Ignorable="d" Height="30" Width="117">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="NumberTextBox" FontSize="16" x:FieldModifier="private" Width="50" Text="0" TextChanged="NumberTextBox_TextChanged" PreviewTextInput="NumberTetBox_PreviewTextInput" LostFocus="NumberTetBox_LostFocus"/>
        <Button x:Name="UpButton" x:FieldModifier="private" Margin="5,0,0,0" Content="˄" Width="30" Click="UpButton_Click" />
        <Button x:Name="DownButton" x:FieldModifier="private" Content="˅" Width="30" Click="DownButton_Click" />
    </StackPanel>
</UserControl>
